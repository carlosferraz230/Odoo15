<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Alterando a View Form do Sale Order -->
    <record id="sale_order_views_form" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <!-- Os Canpos Adicionados -->
            <xpath expr="//field[@name='partner_id']" position="before">
                <field name="type"/>
                <field name="reference"/>
                <field name="date"/>
                <field name="to_pay"/>
            </xpath>
        </field>
    </record>

    <!-- Alterando a View Tree Do Modulo Sale -->
    <record id="sale_order_views_tree" model="ir.ui.view">
        <field name="name">sale.order.tree</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">

            <!-- Adicionando campos depois do parceiro -->
            <xpath expr="//field[@name='partner_id']" position="before">
                <field name="type"/>
                <field name="reference"/>
                <field name="date"/>
            </xpath>
             <xpath expr="//field[@name='amount_total']" position="after">
                <field name="to_pay"/>
            </xpath>

        </field>
    </record>
</odoo>
