{
  "build": {
    "builder": "Docker"
  },
  "deploy": {
    "command": [
      "odoo",
      "--addons-path=/mnt/extra-addons,/usr/lib/python3/dist-packages/odoo/addons",
      "--db_host=${PGHOST}",
      "--db_port=${PGPORT}",
      "--db_user=${PGUSER}",
      "--db_password=${PGPASSWORD}"
    ],
    "healthcheckPath": "/web"
  }
}
