<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_saleorder_custom" inherit_id="sale.report_saleorder_document">


        <div class="page">
            <!-- Título principal -->
            <div style="background-color:#2196F3; color:white; text-align:center;
            padding:8px; margin-bottom:15px; border-radius:4px;">
                <h2 style="margin:0; font-size:18px; font-weight:bold; color:white;">
                    Informações Da Venda
                </h2>
            </div>

            <!-- Cabeçalho em duas colunas -->
            <div style="width:100%; display:flex; justify-content:space-between;
                                    align-items:center; margin-bottom:15px;">
                <!-- Coluna Esquerda: Logo -->
                <div style="flex:1; text-align:left;">
                    <img t-att-src="'/web/image/res.company/%s/logo' % res_company.id"
                         style="max-height:70px;"/>
                </div>
                <!-- Coluna Direita: Dados da Empresa -->
                <div style="flex:2; text-align:right; font-size:12px; color:#444;">
                    <strong>
                        <t t-esc="res_company.name"/>
                    </strong>
                    <br/>
                    <t t-esc="res_company.partner_id.vat"/>
                    <br/>
                    <t t-esc="res_company.phone"/>
                    <br/>
                    <t t-esc="res_company.email"/>
                    <br/>
                    <t t-esc="res_company.street"/>
                </div>

            </div>
            <!-- Rodapé customizado -->
            <footer style="border-top:1px solid #ccc; margin-top:10px; padding-top:5px;
                               text-align:center; font-size:11px; color:#555;">
                Relatório gerado por
                <t t-esc="res_company.name"/>
                em
                <t t-esc="time.strftime('%d/%m/%Y %H:%M')"/>.
                <br/>
                Página
                <span class="page"/>
                de
                <span class="topage"/>
            </footer>

        </div>

        <!-- Insere o Código Interno do Cliente abaixo do nome/endereço do cliente -->
        <xpath expr="//div[@t-field='doc.partner_id']" position="after">
            <p>
                <strong>Código Interno do Cliente:</strong>
                <span t-field="doc.partner_id.customer_code"/>
            </p>
        </xpath>

    </template>
</odoo>
